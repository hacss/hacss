{
  "name": "hacss",
  "version": "0.7.2",
  "description": "Hackable inline style language embedded in HTML classes",
  "repository": "https://github.com/nsaunders/hacss.git",
  "author": "Nick Saunders <nick@saunde.rs>",
  "license": "MIT",
  "engines": {
    "node": ">=12.4.0"
  },
  "main": "./dist/hacss.js",
  "bin": "./dist/cli.js",
  "dependencies": {
    "css.escape": "^1.5.1",
    "fp-ts": "^2.5.1",
    "glob": "^7.1.6",
    "mkdirp": "^0.5.1",
    "postcss": "^7.0.26",
    "postcss-nested": "^4.2.1",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "format": "prettier --trailing-comma all --parser typescript --write src/**/*.ts",
    "imports": "organize-imports-cli src/*.ts src/**/*.ts",
    "prepare": "tsc",
    "test": "tsc && node ./dist/cli.js --output test/styles.css --config test/config.js test/index.html && git diff --exit-code test/styles.css"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/node": "^13.7.1",
    "@types/prettier": "^1.19.0",
    "organize-imports-cli": "^0.7.0",
    "typescript": "^3.7.5"
  }
}
